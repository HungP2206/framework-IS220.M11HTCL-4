<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="section-block" id="basicform">
        <h3 class="section-title">NHÂN VIÊN</h3>
        <!-- <p>Use custom button styles for actions in forms, dialogs, and more with support for multiple sizes, states, and more.</p> -->
    </div>
    <div>
        <form class="form-inline" method="GET" action="searchUsercontroller" style="margin-left: 1000px;" autocomplete="off">
            <div class="form-group">
                <input type="text" class="form-control" id="email" placeholder="Search..." name="searchString" required>
            </div>
            <button type="submit" class="btn btn-default" style="background-color: #ccc"><i class="fa fa-search"></i></button>
        </form>
    </div>
    <div class="cardall">
        <div class="ecommerce-widget">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-6 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">ID</th>
                                            @*<th class="border-0">Tên nhân viên</th>
                                            <th class="border-0">Tên tài khoản</th>*@
                                            <th class="border-0">Mật khẩu</th>
                                            @*<th class="border-0">Role</th>*@
                                            <th class="border-0">Giới tính</th>
                                            <th class="border-0">SĐT</th>
                                            <th class="border-0">Email</th>
                                            <th class="border-0">Địa chỉ</th>
                                            <th class="border-0">Trạng thái</th>
                                            <th class="border-0">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.UserID</td>
                                                <td>@item.EmployeeName</td>
                                                @*<td>@item.UserName</td>
                                                <td>@item.Password</td>*@
                                                <td>
                                                    @if (@item.Gender == 0)
                                                    {
                                                        <p>Nam</p>
                                                    }
                                                    else
                                                    {
                                                        <p>Nữ</p>
                                                    }
                                                </td>

                                                <td>@item.Phone</td>
                                                <td>@item.Email</td>
                                                 <td>@item.Address</td> 
                                                 <td>

                                                     @if (@item.UserStatus == 0)
                                                     {
                                                         <a class="unblock-user" href="lockUser?id=@item.UserID"><span class="fa fa-unlock"></span></a>

                                                     }
                                                     else
                                                     {
                                                         <a class="block-user" href="unlockUser?id=@item.UserID"><span class="fa fa-lock"></span></a>
                                                     }


                                                 </td>
                                                <td>
                                                    <a onclick="return confirm('Bạn có chắc muốn xóa nhân viên ?')" href="deleteUser?id=@item.UserID" class="btn btn-outline-light">Xóa</a>
                                                    <a href="viewupdateUser?id=@item.UserID" class="btn btn-outline-light">Sửa</a>
                                                </td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>