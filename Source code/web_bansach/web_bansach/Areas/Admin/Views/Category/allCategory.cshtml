
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="section-block" id="basicform">
        <h3 class="section-title">THỂ LOẠI SÁCH</h3>
        <!-- <p>Use custom button styles for actions in forms, dialogs, and more with support for multiple sizes, states, and more.</p> -->
    </div>
    <div>
        <form class="form-inline" method="GET" action="searchCategorycontroller" style="margin-left: 1000px;" autocomplete="off">
            <div class="form-group">
                <input type="text" class="form-control" id="email" placeholder="Search..." name="searchString" required>
            </div>
            <button type="submit" class="btn btn-default" style="background-color: #ccc"><i class="fa fa-search"></i></button>
        </form>
    </div>
    <div class="cardall">
        <div class="ecommerce-widget">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-6 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">ID</th>
                                            <th class="border-0">Tên thể loại</th>
                                            @*<th class="border-0">Danh mục cha</th>*@
                                            <th class="border-0">Ngày tạo</th>
                                            <th class="border-0">Trạng thái</th>
                                            <th class="border-0">Thao tác</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.CategoryID</td>
                                                <td>@item.CategoryName</td>
                                                @*<td>@item.ParentID</td>*@
                                                <td>@item.Created_at.ToString("dd-MM-yyyy")</td>
                                                <td>
                                                    @if (@item.CategoryStatus == 0)
                                                    {
                                                        <span class="badge-dot badge-success mr-1"></span> <p>Đang kinh doanh</p>
                                                    }

                                                    else
                                                    {
                                                    <span class="badge-dot badge-brand mr-1"></span> <p>Ngừng kinh doanh</p>
                                                    }
                                                </td>
                                                <td>
                                                    <a onclick="return confirm('Bạn có chắc muốn xóa danh mục này ?')" href="deleteCategory?id=@item.CategoryID" class="btn btn-outline-light">Xóa</a>
                                                    <a href="viewupdateCategory?id=@item.CategoryID" class="btn btn-outline-light">Sửa</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>