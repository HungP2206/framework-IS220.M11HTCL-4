

@model web_bansach.Areas.Admin.Models.CategoryModel
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="basicform">
            <h3 class="section-title">Sửa thể loại sách</h3>
            <!-- <p>Use custom button styles for actions in forms, dialogs, and more with support for multiple sizes, states, and more.</p> -->
        </div>
        <div class="card">
            <h5 class="card-header">Thể loại sách</h5>
            <div class="card-body">
                <form method="post" action="updateCategory">

                    <div class="form-group">
                        <label for="inputText3" class="col-form-label">Mã thể loại sách</label>
                        <input id="inputText3" type="text" class="form-control" readonly="readonly" value=@Model.CategoryID name="CategoryID">
                    </div>

                    <div class="form-group">
                        <label for="inputText3" class="col-form-label">Tên thể loại sách</label>
                        <input id="inputText3" type="text" class="form-control" name="CategoryName" value="@Model.CategoryName">
                    </div>

                    <div class="form-group">
                        <label for="inputText3" class="col-form-label">Trạng thái</label>
                        <select class="custom-select form-control" name="CategoryStatus">
                            @if (@Model.CategoryStatus == 0)
                            {
                                <option selected value="@Model.CategoryStatus">Đang kinh doanh</option>
                                <option value="1">Ngừng kinh doanh</option>
                            }
                            else
                            {
                                <option selected value="@Model.CategoryStatus">Ngừng kinh doanh</option>
                                <option value="0">Đang kinh doanh</option>
                            } 
                        </select>
                    </div>

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <button class="btn btn-primary" type="submit">Cập nhật danh mục</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>
